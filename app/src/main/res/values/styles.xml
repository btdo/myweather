<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="robotoRegularText">
        <item name="android:typeface">normal</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="robotoLightText">
        <item name="android:typeface">normal</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>

    <style name="robotoCondensedText">
        <item name="android:typeface">normal</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="robotoThinText">
        <item name="android:typeface">normal</item>
        <item name="fontFamily">sans-serif-thin</item>
    </style>

    <style name="robotoMediumText">
        <item name="android:typeface">normal</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="pageTitle" parent="robotoMediumText">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pageSubTitle" parent="robotoMediumText">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="forecastDescription" parent="robotoRegularText">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="detailsLabel" parent="robotoLightText">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detailsValue" parent="robotoRegularText">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detailsLabel_normal" parent="robotoRegularText">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="detailsValue_normal" parent="robotoRegularText">
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@color/mine_shaft</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


</resources>
