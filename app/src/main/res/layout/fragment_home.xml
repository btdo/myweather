<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.myweather.ui.HomeFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">

        <LinearLayout
            android:id="@+id/headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_xlarge"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/city_name"
                style="@style/pageTitle"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:text="@{viewModel.location}"
                tools:text="Mountain View" />

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:adjustViewBounds="true"
                app:weatherId="@{viewModel.weatherId}"
                tools:src="@drawable/art_clouds" />

            <TextView
                android:id="@+id/temperature"
                style="@style/pageSubTitle"
                android:layout_marginTop="@dimen/margin_xlarge"
                app:isMetric="@{viewModel.isMetric}"
                app:temperature="@{viewModel.temperature}"
                tools:text="18" />

            <TextView
                android:id="@+id/description"
                style="@style/pageSubTitle"
                android:layout_marginTop="@dimen/margin_xlarge"
                android:text="@{viewModel.description}"
                tools:text="Cloudy" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_xlarge"
            android:layout_marginLeft="@dimen/margin_xlarge"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:layout_marginEnd="@dimen/margin_xlarge"
            android:layout_marginRight="@dimen/margin_xlarge"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/headline"
            app:listData="@{viewModel.forecastDays}"
            tools:itemCount="5"
            tools:listitem="@layout/home_day_forecast_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>